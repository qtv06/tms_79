<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
  <div class="thumbnail">
    <%= image_tag subject.cover.url, class: "scale" %>
    <div class="content-subject">
      <div class="caption">
        <h4 class="word-break h-5"><%= subject.name %></h4>
        <p><i><%= l subject.created_at, format: :short %></i></p>
        <p class="word-break h-4"><%= subject.description %></p>
        <p>
          <%= link_to t("subject.view"), subject_path(subject), class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  </div>
</div>
