<%= form_for [subject, task], remote: true do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "btn.btn_close" %></button>
    <%= f.submit t("task.save"), class: "btn btn-primary save-task" %>
  </div>
<% end %>
