<div id="containerFrontPage">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "signUpForm") do |f| %>
    <%= render "shared/flash" %>
    <div id="signUpTitleContainer"><%= t "form.title_login" %></div>
    <div id="rainbowForSignup"></div>
    <div id="containerForUserEmailInput">
      <%= f.email_field :email, id: "userEmailInput", class: "doRemoveFront registerInput", title: t("form.title.email"), placeholder: t("form.title.email") %>
    </div>
    <div id="containerForUserPasswordInput">
      <%= f.password_field :password, id: "userPasswordInput", class:"doRemoveFront registerInput", title: t("form.title.password"), placeholder: t("form.title.password") %>
    </div>

    <% if devise_mapping.rememberable? %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "form.remember_me" %></span>
      <% end %>
    <% end %>

    <div id="signUpButton">
      <%= f.button t("form.title_login"), class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Logging in..."} %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
